{
    // Configuration Python
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.analysis.extraPaths": [
        "${workspaceFolder}/.venv/lib/python3.12/site-packages"
    ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    
    // Configuration GitHub
    "github-enterprise.uri": "",
    
    // Configuration générale de l'éditeur
    "editor.formatOnSave": true,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [100],
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    
    // Configuration Python supplémentaire
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length", "100"],
    "python.testing.pytestEnabled": true,
    "python.terminal.activateEnvironment": true,
    
    // Configuration Flutter/Dart
    "dart.previewFlutterUiGuides": true,
    "dart.openDevTools": "flutter",
    "dart.debugExternalPackageLibraries": false,
    "dart.debugSdkLibraries": false,
    "dart.previewHotReloadOnSaveWatcher": true,
    "dart.flutterHotReloadOnSave": true,
    "dart.lineLength": 100,
    "dart.completeFunctionCalls": true,
    
    // Configuration spécifique aux langages
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.python",
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.selectionHighlight": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off"
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",
        "editor.formatOnSave": true
    },
    
    // Configuration Git
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "gitlens.hovers.currentLine.over": "line",
    
    // Configuration pour WSL Remote
    "terminal.integrated.defaultProfile.linux": "bash",
    "remote.WSL.fileWatcher.polling": true
}
